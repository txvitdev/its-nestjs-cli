{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false
  },
  "include": ["src"]
}
